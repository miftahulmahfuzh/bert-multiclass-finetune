{
    "model": {
        "name": "google/gemma-2-2b-it"
    },
    "paths": {
        "data_dir": "data",
        "use_cache": true
    },
    "data": {
        "dataset_name": "mahfuzh74/news_multiclass_no_pad",
        "validation_split": 0.1
    },
    "training": {
        "batch_size": 8,
        "epochs": 3,
        "learning_rate": 5e-5,
        "max_length": 512,
        "save_steps": 500,
        "eval_steps": 500,
        "logging_steps": 100,
        "save_total_limit": 3,
        "num_workers": 2,
        "eval_strategy": "steps",
        "save_strategy": "steps",
        "report_to": "none",
        "instruction_prompt": "Categorize the news text"
    },
    "lora": {
        "r": 8,
        "alpha": 32,
        "target_modules": ["q_proj", "v_proj"],
        "dropout": 0.05,
        "bias": "none"
    }
}
