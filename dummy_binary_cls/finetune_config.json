{
    "model": {
        "name": "Hello-SimpleAI/chatgpt-detector-roberta-chinese"
    },
    "dataset": {
        "name": "sg247/binary-classification",
        "use_test_for_validation": true,
        "text_column" : "tweet",
        "label_column" : "label"
    },
    "training": {
        "gpu_ids": [1],
        "max_length": 512,
        "batch_size": 16,
        "epochs": 20,
        "warmup_steps": 0,
        "learning_rate": 2e-5,
        "beta_1": 0.9,
        "beta_2": 0.999,
        "eps": 1e-8,
        "weight_decay": 0.01,
        "amsgrad": false,
        "save_training_state": false
    },
    "nccl": {
        "host": "localhost",
        "port": "12356"
    },
    "wandb": {
        "project": "binary-cls-test"
    },
    "paths": {
        "data_dir": "data",
        "use_cache": true
    }
}
