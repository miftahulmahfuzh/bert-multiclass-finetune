{
    "model": {
        "name": "indobenchmark/indobert-large-p2"
    },
    "training": {
        "gpu_ids": [0,1],
        "max_length": 512,
        "batch_size": 16,
        "epochs": 10,
        "warmup_steps": 0,
        "learning_rate": 2e-5,
        "beta_1": 0.9,
        "beta_2": 0.999,
        "eps": 1e-8,
        "weight_decay": 0.01,
        "amsgrad": false,
        "save_training_state": false,
        "lr_decay_factor": 0.1,
        "lr_patience": 2,
        "min_lr": 1e-6,
        "early_stopping_patience": 3
    },
    "nccl": {
        "host": "localhost",
        "port": "12356"
    },
    "wandb": {
        "project": "news-classification-bert"
    },
    "paths": {
        "data_dir": "financial_news_data",
        "use_cache": true
    }
}
